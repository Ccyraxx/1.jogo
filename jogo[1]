				escrevaparado("voce acertou o hp do boss sera reduzido pela metade, e o dano dele vai ser reduzido por 30% do dano original!",0)
				hpboss2=hpboss2/2
				reduzido=artboss2/100
				soma=reduzido*30
				artboss2=artboss2-soma

				
			}
				se(hpjhomsom<0){
					perdedor()
				}
				se(hpboss2<0){
					escrevaparado("voce derrotou o boss,agr sera a vez do proximo!",0)
					escrevaparado("gx",0)
					reduzido=artjhomsom/100
					soma=reduzido*30
					artjhomsom=artjhomsom+soma
					batalhasbossjhomsom3(hpjhomsom, artjhomsom)
				}
		}
	}
}
	funcao batalhasbossjhomsom3(inteiro hpjhomsom, inteiro artjhomsom){

			inteiro hpboss3=75
			inteiro artboss3=35
			inteiro escolhe, num, sorte, reduzido, soma

				escrevaparado("voce esta numa batalha!",0)

		enquanto(hpboss3>0){

			cadeia resposta
				escrevaparado("\n1-ataque noma1\n2-fugir\n3-ataque especial\n",0)
				leia(escolhe)
				
			se(escolhe==1){
				escrevaparado("\nvoce escolheu ataque normal!\n",0)
				hpboss3=hpboss3-artjhomsom
				escrevaparado("ele ficou com "+hpboss3+" de hp\n agora ele esta preste a atacar voce\ndigite um numero de 1 a 5 pra nao levar dano dele!",0)
				leia(num)
				sorte=u.sorteia(1, 5)
			se(num==sorte){
				escrevaparado("voce acertou; ele errou o ataque sua vez agora!",0)
				}senao{
					escrevaparado("\nvoce errou o numero\n",0)
					hpjhomsom=hpjhomsom-artboss3
					escrevaparado("voce ficou com "+hpjhomsom+" de hp",0)
	}
				se(hpjhomsom<0){
					perdedor()
				}
				se(hpboss3<0){
					vencedor()
				}			
}
			se(escolhe==2){
				escrevaparado("\nvoce escolheu fugir!",0)
				pare
}
			se(escolhe==3){
				escrevaparado("voce escolheu ataque especial",0)
				escrevaparado("\npra usar ele voce precisa acertar um numero de 1 a 10\n",0)
				
				leia(num)
				sorte=u.sorteia(1,10)
			se(num==sorte){
				escrevaparado("voce acertou o hp do boss sera reduzido pela metade, e o dano dele vai ser reduzido por 30% do dano original!",0)
				hpboss3=hpboss3/2
				reduzido=artboss3/100
				soma=reduzido*30
				artboss3=artboss3-soma

				
			}senao{
				escrevaparado("voce errou!",0)
				hpjhomsom=hpjhomsom-artboss3
			}
				se(hpjhomsom<0){
					perdedor()
				}
				se(hpboss3<0){
					vencedor()
				}
		}
	}
}
		funcao vencedor(){
			escrevaparado("(2×3 2−12)÷ 4",0)
			leia(resposta)

			se(resposta == "neymar"){

				escrevaparado("🅥🅞🅒🅔 🅖🅐🅝🅗🅞🅤, 🅕🅘🅜",0)
			}senao{
				escrevaparado("🅥🅞🅒🅔 🅔🅡🅡🅞🅤, 🅚🅚🅚🅚🅚🅚, 🅕🅘🅜",0)
			}
			credtos()
}
		funcao perdedor(){
			escrevaparado("Voce perdeu!\nahkahkahkahkahkahk",0)
			credtos()
		}
		funcao credtos(){
			escrevaparado("CODIGO:Carlos Eduardo! 90%\nHISTORIA:Luccas! CODIGO! 5%\nkAYO:FUNÇAO! CODIGO! 5%\nRaylan: apresentaçao!",0)
		}
