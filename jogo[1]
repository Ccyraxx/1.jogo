	funcao batalhasbossaizen(){

			inteiro hpaizen=650, artaizen=60
			inteiro hpboss=20
			inteiro artboss=35
			inteiro escolhe, num, sorte, reduzido, soma

				escrevaparado("voce esta numa batalha!",0)

		enquanto(hpboss>0){

			cadeia resposta
				escrevaparado("\n1-ataque noma1\n2-fugir\n3-ataque especial\n",0)
				leia(escolhe)
				
			se(escolhe==1){
				escrevaparado("\nvoce escolheu ataque normal!\n",0)
				hpboss=hpboss-artaizen
				escrevaparado("ele ficou com "+hpboss+" de hp\n agora ele esta preste a atacar voce\ndigite um numero de 1 a 5 pra nao levar dano dele!",0)
				leia(num)
				sorte=u.sorteia(1, 5)
			se(num==sorte){
				escrevaparado("voce acertou; ele errou o ataque sua vez agora!",0)
				}senao{
					escrevaparado("\nvoce errou o numero\n",0)
					hpaizen=hpaizen-artboss
					escrevaparado("voce ficou com "+hpaizen+" de hp, e com "+artaizen+" de dano",0)
	}

				se(hpaizen<0){
					perdedor()
				}
				se(hpboss<0){
					escrevaparado("voce derrotou o boss,agr sera a vez do proximo!",0)
					escrevaparado("tk",0)
					reduzido=artaizen/100
					soma=reduzido*10
					artaizen=artaizen+soma
					escreva(artaizen)
					batalhasbossaizen1(hpaizen, artaizen)
				}			
}
			se(escolhe==2){
				escrevaparado("\nvoce escolheu fugir!",0)
				pare
}
			se(escolhe==3){
				escrevaparado("voce escolheu ataque especial",0)
				escrevaparado("\npra usar ele voce precisa acertar um numero de 1 a 10\n",0)
				leia(num)
				sorte=u.sorteia(1,10)
			se(num==sorte){
				escrevaparado("voce acertou o hp do boss sera reduzido pela metade, e o dano dele vai ser reduzido por 30% do dano original!",0)
				hpboss=hpboss/2
				reduzido=artboss/100
				soma=reduzido*30
				artboss=artboss-soma
				
			}senao{
				escrevaparado("voce errou!",0)
				hpaizen=hpaizen-artboss
			}
				se(hpaizen<0){
					perdedor()
				}
				se(hpboss<0){
					escrevaparado("voce derrotou o boss,agr sera a vez do proximo!",0)
					escrevaparado("tk",0)
					reduzido=artaizen/100
					soma=reduzido*10
					artaizen=artaizen+soma
					escreva(artaizen)
					batalhasbossaizen1(hpaizen, artaizen)
				
				}
			}
	}
}		
