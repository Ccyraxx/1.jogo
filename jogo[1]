programa
{
	inclua biblioteca Texto-->t
	inclua biblioteca Util-->u

			cadeia resposta
	
	funcao inicio()
	{
		inteiro resultado
		cadeia resposta
		inteiro escolhe

		escrevaparado("Seja Bem-vindo\n",0)
		escrevaparado("A Lenda do Herói Silencioso\n",0)

		escrevaparado("Em um reino antigo, a paz de mil anos foi quebrada quando uma maldição se espalhou pelas quatro Torres dos Elementos. Guardiões, uma vez benevolentes, foram corrompidos e agora espalham trevas e caos.\n",0)
		escrevaparado("A profecia fala de um herói que virá para libertar o reino. Esse herói não é um guerreiro lendário, mas um aventureiro que deve provar seu valor superando os desafios das torres.\n O destino do reino está em suas mãos, e sua jornada será solitária, enfrentando cada guardião um a um.\n",0)
		escrevaparado("A cada torre que você adentra, a névoa da maldição se torna mais densa. A cada batalha que vence, você sente a energia do lugar sendo restaurada. No final, após derrotar o último guardião e destruir a fonte da maldição,\n você se torna o herói da lenda.",0)
		escrevaparado("A história é simples: escolha seu caminho, enfrente seus inimigos e supere os obstáculos. Seu sucesso depende de sua habilidade para atacar no momento certo e de sua sorte para desviar dos ataques,\n combinando a força bruta com a astúcia para alcançar a vitória final.",0)

		
		escrevaparado("\n\neescolhe um desses perssonagens!",0)
		nomes()
		escrevaparado("\nCaso queira uma descrição sobre eles digite o numero 0 \ncaso nao queira so escreve o numero do personagens!\n",0)
		leia(escolhe)

		se(escolhe==0){
			personagens()
			nomes()
			escrevaparado("\nQual você era escolhe!\n",0)
			leia(escolhe)
		}
		se(escolhe == 1){
			batalhasbossshy()
		}
		se(escolhe == 2){
			batalhasbossaizen()
		}
		se(escolhe == 3){
			batalhasbossgelado()
		}
		se(escolhe == 4){
			batalhasbossjhomsom()
		}
	}
	funcao escrevaparado(cadeia texto, inteiro velocidade){
		para(inteiro i=0; i < t.numero_caracteres(texto); i++){
			escreva(t.obter_caracter(texto, i))
			u.aguarde(velocidade)
		}
	}
	funcao personagens(){
		
			inteiro hpshy=300, artshy= 35
			inteiro hpaizen=650, artaizen=60
			inteiro hpgelado=600,artgelado=65
			inteiro hpjhomsom=650,artjhomsom=50
		
			escrevaparado("\nVocê escolheu a descrição aqui esta!\n",0)
			escrevaparado("\nShy: ela tem "+hpshy+" de HP e "+artshy+" de dano ela nao possuir dano critico, mais ela tem uma habilidade de recuperar em 30%\n sua vida a cada boss derrotado!\n",0)
			escrevaparado("\nAizen: ele tem "+hpaizen+" de hp e "+artaizen+" de dano ele tambem nao possuir dano critico mais ele tem uma abilidade \nChamado Kaioken ela permite que o aizen corta seu dano pela metado e soma a metado com o dano que ele tinha assim aumentando o dano do aizen\nA cada boss derrotado!",0)
			escrevaparado("\ngelado: ele tem "+hpgelado+" de HP e "+artgelado+" de dano ele tambem nao possuir dano critico mais ele tem uma abilidade \nchamado colete protetor ele permite que todo o dano que voce levar e reduzido por 20% \n",0)
			escrevaparado("\njhomsom: ele tem "+hpjhomsom+" de HP e "+artjhomsom+" de dano ele tambem nao possuir dano critico mais ele tem uma abilidade \nchamado Kaiokenplus ela permite que a cada boss derrotado o dano alumentar em 30%\n",0)
	}
	funcao nomes(){
		escrevaparado("\n1-Shy\n2-aizen\n3-gelado\n4-jhomsom\n",0)
	}
	
	funcao batalhasbossshy(){

			inteiro hpshy=300, artshy= 35
			inteiro hpboss=150
			inteiro artboss=35
			inteiro escolhe, num, sorte, reduzido, soma

				escrevaparado("voce esta numa batalha!",0)

		enquanto(hpboss>0){

			cadeia resposta
				escrevaparado("\n1-Ataque normal\n2-Fugir\n3-Ataque Especial\n",0)
				leia(escolhe)
				
			se(escolhe==1){
				escrevaparado("\nVoce escolheu ataque normal!\n",0)
				hpboss=hpboss-artshy
				escrevaparado("Ele ficou com "+hpboss+" de HP\n Agora ele esta preste a atacar voce\n Digite um numero de 1 a 5 pra nao levar dano dele!",0)
				leia(num)
				sorte=u.sorteia(1, 3)
			se(num==sorte){
				escrevaparado("Voce acertou; ele errou o ataque sua vez agora!",0)
				}senao{
					escrevaparado("\nVoce errou o numero\n",0)
					hpshy=hpshy-artboss
					escrevaparado("Voce ficou com "+hpshy+" de HP",0)
	}

				se(hpshy<0){
					perdedor()
				}
				se(hpboss<0){
					escrevaparado("Voce derrotou o boss,Agore sera a vez do proximo boss!",0)
					escrevaparado("tk",0)
					reduzido=hpshy/100
					soma=reduzido*30
					hpshy=hpshy+soma
					batalhasbossshy1(hpshy, artshy)
				}		
}
			se(escolhe==2){
				escrevaparado("\nVoce escolheu fugir!",0)
				pare
}
			se(escolhe==3){
				escrevaparado("Voce escolheu ataque especial",0)
				escrevaparado("\nPra usar ele voce precisa acertar um numero de 1 a 10\n",0)
				leia(num)
				sorte=u.sorteia(1,10)
			se(num==sorte){
				escrevaparado("Voce acertou o HP do boss sera reduzido pela metade, e o dano dele vai ser reduzido por 20% do dano original!",0)
				hpboss=hpboss-artshy
				reduzido=artboss/100
				soma=reduzido*20
				artboss=artboss-soma
				hpshy=hpshy-artboss

				
			}senao{
				escrevaparado("Voce errou!",0)
				hpshy=hpshy-artboss
			}
				se(hpshy<0){
					perdedor()
				}
				se(hpboss<0){
					escrevaparado("Voce derrotou o boss,\nAgora sera a vez do proximo boss!",0)
					escrevaparado("tk",0)
					reduzido=hpshy/100
					soma=reduzido*30
					hpshy=hpshy+soma
					batalhasbossshy1(hpshy, artshy)
				}
		}
	}
}		
